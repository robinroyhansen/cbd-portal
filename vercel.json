{
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "x-robots-tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/research-scan",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/publish-scheduled",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "src/app/api/cron/research-scan/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/trigger-scan/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/scanner/process/route.ts": {
      "maxDuration": 300
    }
  }
}
